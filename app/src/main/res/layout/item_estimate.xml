<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="156dp">


    <ImageView
        android:id="@+id/iv_estimate"
        android:layout_width="109dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:background="#C6C6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_estimate"
        android:layout_width="221dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:text="ë¹µ"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_estimate_goob"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="@dimen/permission_dp_40"
        app:layout_constraintStart_toEndOf="@+id/iv_estimate"
        app:layout_constraintTop_toBottomOf="@+id/tv_estimate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_thumbsup_regular"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/ibtn_estimate_bad"
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibtn_estimate_goob"
        app:layout_constraintTop_toBottomOf="@+id/tv_estimate"
        app:layout_constraintVertical_bias="0.428"
        app:srcCompat="@drawable/ic_thumbsdown_small"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>