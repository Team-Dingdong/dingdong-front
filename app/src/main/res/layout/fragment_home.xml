<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fruit"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_fruit"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:text="과일·채소"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="12dp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/meat"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_meat"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:text="육류·계란"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="12dp"
                android:textStyle="normal"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/snack"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_chocolate"></ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center_horizontal"
                android:text="간식류"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="12dp"
                android:textStyle="normal"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/daily"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cat4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_toothbrush"></ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center_horizontal"
                android:text="생필품"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="12dp"
                android:textStyle="normal"></TextView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="166dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_trans"
            android:background="#00000000"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_trans">
        </ImageButton>

        <TextView
            android:id="@+id/tv_align"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/noto_sans"
            android:text="최신순"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp">

        </TextView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sharelist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false" />

            <ProgressBar
                android:id="@+id/pgbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/btn_edit"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="339dp"
        app:srcCompat="@drawable/ic_btn_edit">

    </ImageButton>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@null"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|snap|enterAlways"
            app:titleEnabled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <FrameLayout
                    android:id="@+id/pepole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/select_region"
                        android:layout_width="70dp"
                        android:background="#ffffff"
                        android:backgroundTint="#ffffff"
                        android:layout_height="wrap_content">
                    </Spinner>

                    <TextView
                        android:id="@+id/tv_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="미아2동"
                        android:textColor="#000000"
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="90dp"
                        app:srcCompat="@drawable/ic_listup"></ImageView>

                </FrameLayout>


                <ImageButton
                    android:id="@+id/ic_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_search"
                    tools:ignore="VectorDrawableCompat" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>


</FrameLayout>