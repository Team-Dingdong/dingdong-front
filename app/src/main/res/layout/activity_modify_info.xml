<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/modifyview"
    android:layout_height="match_parent"
    tools:context=".mypage.ModifyInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_btn_back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 정보 수정"
            android:fontFamily="@font/noto_sans"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:text="전화번호"
            android:textFontWeight="800"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="01011111111"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#c5c5c5"
            android:fontFamily="@font/noto_sans"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="16dp"
            android:text="수정하기" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

        <EditText
            android:layout_width="220dp"
            android:id="@+id/et_modify"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:maxLength="11"
            android:hint="휴대폰 번호 (-없이 숫자만 입력)"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#c5c5c5"
            android:fontFamily="@font/noto_sans"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:text="인증번호받기" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/auth"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

        <EditText
            android:layout_width="220dp"
            android:id="@+id/et_auth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:maxLength="6"
            android:hint="인증번호"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#c5c5c5"
            android:fontFamily="@font/noto_sans"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="16dp"
            android:text="확인" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="탈퇴하기"
        android:fontFamily="@font/noto_sans"
        android:backgroundTint="#c5c5c5"
        android:textColor="#000000"
        android:textFontWeight="700"
        android:textSize="16dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="로그아웃"
        android:fontFamily="@font/noto_sans"
        android:textColor="#000000"
        android:backgroundTint="#c5c5c5"
        android:textFontWeight="800"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_quit" />


</androidx.constraintlayout.widget.ConstraintLayout>