<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatting.PlanningActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_btn_back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나눔 생성"
            android:fontFamily="@font/noto_sans"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/noto_sans"
            android:text="언제"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#C4C4C4"
            android:fontFamily="@font/noto_sans"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:hint="날짜 선택"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/btn_datepick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_calendar" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/noto_sans"
            android:text="몇시"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#C4C4C4"
            android:fontFamily="@font/noto_sans"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:hint="시간 선택"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/btn_timepick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_time" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/noto_sans"
            android:text="어디서"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/et_place"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#C4C4C4"
            android:maxLength="10"
            android:fontFamily="@font/noto_sans"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="17dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/noto_sans"
            android:text="20210801 17시 17분 노원구청 앞에서"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/noto_sans"
            android:text="거래 약속을 잡으시겠어요?"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginTop="470dp"
        android:backgroundTint="#c5c5c5"
        android:fontFamily="@font/noto_sans"
        android:text="완료"
        android:textColor="#000000"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>