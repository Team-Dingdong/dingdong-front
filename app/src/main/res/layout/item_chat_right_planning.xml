<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_date"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:text="2021.08.23"
        android:layout_gravity="center_horizontal"
        android:textColor="#c5c5c5"
        android:layout_marginTop="6dp"
        android:textFontWeight="800"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="85dp"
            android:fontFamily="@font/noto_sans"
            android:text="오후 12:58"
            android:textFontWeight="400" />

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="250dp"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content"
            android:background="#B2FFE2"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/noto_sans"
            android:paddingHorizontal="21dp"
            android:paddingTop="11dp"
            android:text="노원구청 앞
            2021.08.01 17시 17분"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="16dp"
            android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:fontFamily="@font/noto_sans"
                android:paddingHorizontal="21dp"
                android:paddingBottom="11dp"
                android:text="약속을 잡아요"
                android:textColor="#000000"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    app:srcCompat="@drawable/ic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/noto_sans"
                android:text="동의가 완료되었습니다."
                android:textColor="#FF8181"
                android:textFontWeight="400"
                android:textSize="12dp"
                android:textStyle="normal" />

            </LinearLayout>

            <Button
                android:enabled="false"
                android:layout_width="80dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:textFontWeight="700"
                android:text="ok"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_height="40dp">

            </Button>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/pepole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_people"></ImageView>

                <TextView
                    android:id="@+id/tv_personnel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="1/4"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>